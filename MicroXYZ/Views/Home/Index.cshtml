                <div class="title text-center wow fadeIn" data-wow-duration="500ms">
                    <h2>İletişime <span class="color">Geçin</span></h2>
                    <div class="border"></div>
                </div>
                <!-- /section title -->
                <!-- Contact Details -->
                <div class="contact-info col-md-6 wow fadeInUp" data-wow-duration="500ms">
                    <h3>@Model.ContactPageSetting.Title</h3>
                    <p>
                        @Model.ContactPageSetting.Description
                    </p>
                    <div class="contact-details">
                        <div class="con-info clearfix">
                            <i class="tf-map-pin"></i>
                            <span>@Model.ContactPageSetting.Address</span>
                        </div>

                        <div class="con-info clearfix">
                            <i class="tf-ion-ios-telephone-outline"></i>
                            <span>Phone: @Model.ContactPageSetting.Phone</span>
                        </div>

                        <div class="con-info clearfix">
                            <i class="tf-ion-iphone"></i>
                            <span>Fax: @Model.ContactPageSetting.Fax</span>
                        </div>

                        <div class="con-info clearfix">
                            <i class="tf-ion-ios-email-outline"></i>
                            <span>Email: <a href="mailto:@Model.ContactPageSetting.Email">@Model.ContactPageSetting.Email</a></span>
                        </div>
                    </div>
                </div>
                <!-- / End Contact Details -->
                <!-- Contact Form -->
                <div class="contact-form col-md-6 wow fadeInUp" data-wow-duration="500ms" data-wow-delay="300ms">
                    <form id="contact-form" method="post" action="/" role="form">

                        <div class="form-group">
                            <input asp-for="ContactFormPostModel.NameSurname" type="text" placeholder="Your Name" class="form-control" id="name">
                            <span asp-validation-for="ContactFormPostModel.NameSurname" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="ContactFormPostModel.Email" type="email" placeholder="Your Email" class="form-control" id="email">
                        </div>

                        <div class="form-group">
                            <select asp-for="ContactFormPostModel.SubjectId" class="form-control">
                                <option style="background-color:#292F36;" value="0">Konu Seçiniz</option>

                                @foreach (var contactFormSubject in Model.ContactFormSubjects)
                                {
                                    <option class="form-control" style="background-color:#292F36;" value="@contactFormSubject.Id">@contactFormSubject.Name</option>
                                }
                            </select>
                            @*<input type="text" placeholder="Subject" class="form-control" name="subject" id="subject">*@
                        </div>

                        <div class="form-group">
                            <textarea asp-for="ContactFormPostModel.Message" rows="6" placeholder="Message" class="form-control" id="message"></textarea>
                        </div>

                        @if (ViewBag.ContactFormSuccess != null && ViewBag.ContactFormSuccess)
                        {
                            <div class="success" style="display:block;margin-bottom: 15px;">
                                Talebiniz Alındı. En Kısa sürede sizlere geri dönüş yapılacaktır.
                            </div>
                        }

                        else if (ViewBag.ContactFormSuccess != null && !ViewBag.ContactFormSuccess)
                        {
                            <div class="error" style="display:block;margin-bottom: 15px;">
                                Üzgünüz bu işlem gerçekleşmedi. Daha Sonra Tekrar Deneyiniz !
                            </div>
                        }

                        <div id="cf-submit">
                            <input type="submit" class="btn btn-transparent" value="Gönder">
                        </div>

                    </form>
                </div>
                <!-- ./End Contact Form -->

            </div> <!-- end row -->
        </div> <!-- end container -->
