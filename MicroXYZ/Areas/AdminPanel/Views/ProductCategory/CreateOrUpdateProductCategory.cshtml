@model ProductCategory
@{
    ViewData["Title"] = "CreateOrUpdateProductCategory";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="vh-100">
    <div class="col-12">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">@(Model.Id == 0 ? "Yeni ProductCategory Ekleyin" : "ProductCategory 'i Güncelleyin" )</h6>
            <form asp-action="/admin/product-category-edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Id" type="hidden" value="@Model.Id" />

                <div class="mb-3">
                    <label asp-for="Title" for="homePageSettingTitleInput" class="form-label">Title <span class="text-danger">*</span></label>
                    <input asp-for="Title" type="text" class="form-control" id="homePageSettingTitleInput">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Sequence" for="homePageSettingTitleInput2" class="form-label">Sequence <span class="text-danger">*</span></label>
                    <input asp-for="Sequence" type="number" class="form-control" id="homePageSettingTitleInput2" aria-describedby="processPriceHelp">
                    <span asp-validation-for="Sequence" class="text-danger"></span>
                    <div id="processPriceHelp" class="form-text">
                        Girdiğiniz sıra numarasının diğer ürün kategorileri ile çakışmadığına emin olunuz.
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        $(".nav-link").removeClass("active");

        $("#productNavItem").addClass("active");
        $("#productNavItem").addClass("show");
        $(".product-nav-item-menu").addClass("show");

    </script>
}