@model ContactFormSubject
@{
    ViewData["Title"] = "CreateOrUpdateContactFormSubject";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="vh-100">
    <div class="col-12">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">@(Model.Id == 0 ? "Yeni ContactFormSubject Ekleyin" : "ContactFormSubject 'i Güncelleyin" )</h6>
            <form asp-action="/admin/contact-form-subject-edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

