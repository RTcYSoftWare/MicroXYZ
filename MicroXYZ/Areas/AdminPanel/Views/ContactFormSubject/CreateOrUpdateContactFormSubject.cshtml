                <div class="mb-3">
                    <label asp-for="Name" for="homePageSettingTitleInput" class="form-label">Name <span class="text-danger">*</span></label>
                    <input asp-for="Name" type="text" class="form-control" id="homePageSettingTitleInput">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>


