@model AboutItem
@{
    ViewData["Title"] = "CreateOrUpdateAboutItemSetting";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="">
    <div class="col-12">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">@(Model.Id == 0 ? "Yeni ContactPageSetting Ekleyin" : "ContactPageSetting 'i Güncelleyin" )</h6>
            <form asp-action="/admin/about-item-edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Id" type="hidden" value="@Model.Id" />

                <div class="mb-3">
                    <label asp-for="Title" for="homePageSettingTitleInput" class="form-label">Title <span class="text-danger">*</span></label>
                    <input asp-for="Title" type="text" class="form-control" id="homePageSettingTitleInput">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" for="homePageSettingTitleInput" class="form-label">Description <span class="text-danger">*</span></label>
                    <input asp-for="Description" type="text" class="form-control" id="homePageSettingTitleInput">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Icon" class="form-label">Select Icon <span class="text-danger">*</span></label>
                    <select asp-for="Icon" class="form-select mb-3" aria-label="Select Icon">
                        <option selected>Select Icon</option>
                        <option>Select Icon</option>
                        <option value="tf-alarmclock"><i class="tf-alarmclock"></i></option>
                        <option>Select Icon</option>
                        <option>Select Icon</option>
                    </select>
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Icon" for="homePageSettingTitleInput" class="form-label">Icon <span class="text-danger">*</span></label>
                    <input asp-for="Icon" type="text" class="form-control" id="homePageSettingTitleInput">
                    <span asp-validation-for="Icon" class="text-danger"></span>
                    <div id="serviceIconHelp" class="form-text">
                        Kullanabileceğiniz iconlar: 
                        tf-ion-laptop, tf-genius, tf-dial, tf-target3, tf-lifesaver
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        $(".nav-link").removeClass("active");

        $("#aboutPageNavItem").addClass("active");
        $("#aboutPageNavItem").addClass("show");
        $(".about-page-nav-item-menu").addClass("show");

    </script>
}