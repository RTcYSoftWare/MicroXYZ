@model Admin
@{
    ViewData["Title"] = "CreateOrUpdateAdmin";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="vh-100">
    <div class="col-12">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">@(Model.Id == 0 ? "Yeni Service Ekleyin" : "Service 'i Güncelleyin" )</h6>
            <form asp-action="/admin/admin-edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Id" type="hidden" value="@Model.Id" />

                <div class="mb-3">
                    <label asp-for="Name" for="serviceTitleInput" class="form-label">Name <span class="text-danger">*</span></label>
                    <input asp-for="Name" type="text" class="form-control" id="serviceTitleInput">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Surname" for="serviceDescInput" class="form-label">Surname <span class="text-danger">*</span></label>
                    <input asp-for="Surname" type="text" class="form-control" id="serviceTitleInput">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" for="serviceDescInput" class="form-label">Email <span class="text-danger">*</span></label>
                    <input asp-for="Email" type="text" class="form-control" id="serviceTitleInput">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" for="serviceDescInput" class="form-label">Phone <span class="text-danger">*</span></label>
                    <input asp-for="Phone" type="text" class="form-control" id="serviceTitleInput">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" for="serviceDescInput" class="form-label">Password <span class="text-danger">*</span></label>
                    <input asp-for="Password" type="text" class="form-control" id="serviceTitleInput" aria-describedby="serviceIconHelp">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div id="serviceIconHelp" class="form-text">
                        Not: Eğer admin password değiştirmeyecekseniz PASSWORD verisi ile oynama yapmayınız.
                    </div>
                </div>


                @*<div class="mb-3">
                <label asp-for="Icon" for="serviceIconInput" class="form-label">Icon <span class="text-danger">*</span></label>
                <input asp-for="Icon" type="text" class="form-control" id="serviceIconInput" aria-describedby="serviceIconHelp">
                <span asp-validation-for="Icon" class="text-danger"></span>
                <div id="serviceIconHelp" class="form-text">
                Kullanabileceğiniz iconlar:
                tf-ion-laptop, tf-genius, tf-dial, tf-target3, tf-lifesaver
                </div>
                </div>*@

                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        $(".nav-link").removeClass("active");

        $("#adminsNavItem").addClass("active");

    </script>
}