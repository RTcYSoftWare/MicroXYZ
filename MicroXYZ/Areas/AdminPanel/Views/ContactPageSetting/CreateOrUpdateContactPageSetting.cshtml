@model ContactPageSetting
@{
    ViewData["Title"] = "CreateOrUpdateContactPageSetting";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="vh-100">
    <div class="col-12">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">@(Model.Id == 0 ? "Yeni ContactPageSetting Ekleyin" : "ContactPageSetting 'i Güncelleyin" )</h6>
            <form asp-action="/admin/contact-page-setting-edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Id" type="hidden" value="@Model.Id" />

                <div class="mb-3">
                    <label asp-for="Title" for="homePageSettingTitleInput" class="form-label">Title <span class="text-danger">*</span></label>
                    <input asp-for="Title" type="text" class="form-control" id="homePageSettingTitleInput">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" for="homePageSettingDescInput" class="form-label">Description <span class="text-danger">*</span></label>
                    <textarea asp-for="Description" type="text" class="form-control" id="homePageSettingDescInput"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" for="homePageSettingVideoInput" class="form-label">Address <span class="text-danger">*</span></label>
                    <input asp-for="Address" type="text" class="form-control" id="homePageSettingVideoInput">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" for="homePageSettingVideoInput" class="form-label">Phone <span class="text-danger">*</span></label>
                    <input asp-for="Phone" type="text" class="form-control" id="homePageSettingVideoInput">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Fax" for="homePageSettingVideoInput" class="form-label">Fax <span class="text-danger">*</span></label>
                    <input asp-for="Fax" type="text" class="form-control" id="homePageSettingVideoInput">
                    <span asp-validation-for="Fax" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" for="homePageSettingVideoInput" class="form-label">Email <span class="text-danger">*</span></label>
                    <input asp-for="Email" type="text" class="form-control" id="homePageSettingVideoInput">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                @*                <div class="mb-3">
                <label asp-for="Des" for="processPriceInput" class="form-label">Price <span class="text-danger">*</span></label>
                <input asp-for="Price" type="text" class="form-control" id="processPriceInput" aria-describedby="processPriceHelp">
                <span asp-validation-for="Price" class="text-danger"></span>
                <div id="processPriceHelp" class="form-text">
                Küsuratı "VİRGÜL (,)" ile ayırınız. Örn: ₺ 12,99 gibi.
                </div>
                </div>*@

                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        $(".nav-link").removeClass("active");

        $("#contactPageNavItem").addClass("active");
        $("#contactPageNavItem").addClass("show");
        $(".contact-page-nav-item-menu").addClass("show").addClass("active");

    </script>
}